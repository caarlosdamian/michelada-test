<%= form_for(@product) do |f| %>

<% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this brand from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: 'E.G. Macbook pro' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: 'form-control', placeholder: 'E.G. Laptop 13 inches' %>
  </div>
 <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: 'form-control', placeholder: '100', in: 1..100 %>
  </div>
  <div class="form-group">
   Brand:
   <%= f.collection_select(:brand_id, Brand.all, :id, :name, {}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save!', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
