<%= form_for :brand, url: brands_path do |f| %>

<% if @brand.errors.any? %>
<div class="alert alert-danger" role="alert">
  <strong>
    <%= pluralize(@brand.errors.count, "error") %>
  </strong>
    <ul>
      <% @brand.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
</div>
  <% end %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: 'E.G. Apple'%>
  </div>


  <div class="form-group">
    <%= f.submit 'Save!', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
<%= link_to 'List of Brands', brands_path %>
